
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Product>
<h1>Ürünler</h1>

   <table class="table table-bordered">
       <thead>
           <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Fiyat</th>
                <th>Stok</th>
           </tr>
       </thead>
       <tbody>
    @foreach (var product in Model)
    {
        <tr>
        <td>@product.Id</td>
        <td>@product.Name</td>
        <td>@product.Price</td>
        <td>@product.Stock</td>
        </tr>
    }
    </tbody>
</table>

